<%- include('layout/header') %>
    <%- include('layout/navbar') %>


        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <% if (message) { %>
                        <div class="alert alert-<%= message.type %> alert-dismissible fade show" role="alert">
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>

                            <strong><%= message.message %></strong>
                        </div>
                        <% } %>
                            <h1>all user</h1>
                            <div class="table-responsive">
                                <% if (users != '') { %>
                                    <table class="table table-stripped" id="myTable">
                                        <thead>
                                            <tr class="table-dark">
                                                <th>id</th>
                                                <th>Image</th>
                                                <th>name</th>
                                                <th>email</th>
                                                <th>phone no</th>
                                                <th>Action</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% users.forEach((row, index) => { %>
                                                <tr>
                                                    <td>
                                                        <%= index %>
                                                    </td>
                                                    <td><img src="<%= row.image %>" width="50" class="img.thumbnail" alt=""></td>
                                                    <td>
                                                        <%= row.name  %>
                                                    </td>
                                                    <td>
                                                        <%= row.email %>
                                                    </td>
                                                    <td>
                                                        <%= row.phone %>
                                                    </td>
                                                    <td>
                                                        <a href="/edit/<%= row._id %>" class="text-success"><i class="fa fa-edit"></i></a>
                                                        <a href="/delete/<%= row._id %>" class="text-danger"><i class="fa fa-trash"></i></a>
                                                    </td>
                                                </tr>
                                                <% }) %>

                                        </tbody>
                                    </table>
                                    <% } else { %>
                                        <div class="alert alert-warning fade show" role="alert">
                                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>

                                            <strong>No users found in the database</strong>
                                        </div>
                                        <% } %>


                            </div>
                </div>
            </div>
        </div>
        <%- include('layout/footer') %>